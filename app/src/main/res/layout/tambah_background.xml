<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="17dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tambah_background"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:textColor="@color/background"
                android:background="@color/colorPrimary"
                android:padding="7dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTambahBackground"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/tambah_background"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible">

                    <VideoView
                        android:id="@+id/vdTambahBackground"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/txtDurasiVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_alignEnd="@+id/vdTambahBackground"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="#000000"/>

                </RelativeLayout>

                <RadioGroup
                    android:id="@+id/rgBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbBackgroundAktif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/aktif"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/rbBackgroundArsip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/arsip"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:buttonTint="@color/colorPrimary"/>

                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:baselineAligned="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.andexert.library.RippleView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btnBatalSimpanBackground"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/batal"
                                android:textSize="15sp"
                                android:textColor="@color/background"
                                android:textStyle="bold"
                                android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                                android:background="@drawable/rounded_button"
                                android:padding="10dp"
                                android:drawableTint="@color/background"/>

                        </com.andexert.library.RippleView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end">

                        <com.andexert.library.RippleView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btnSimpanBackground"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/SIMPAN"
                                android:textSize="15sp"
                                android:textColor="@color/background"
                                android:textStyle="bold"
                                android:drawableStart="@android:drawable/ic_menu_save"
                                android:background="@drawable/rounded_button"
                                android:padding="10dp"
                                android:drawableTint="@color/background"/>

                        </com.andexert.library.RippleView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>