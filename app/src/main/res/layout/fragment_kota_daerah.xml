<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Pengaturan.MenuHome.KotaDaerahFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kota_daerah"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"/>

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/txtEditKota_Daerah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/kota_daerah"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColorHighlight="@color/colorPrimary"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtKota_Daerah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/btnUbahKota_Daerah"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="@string/kota_daerah"
                        android:textSize="17sp"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        android:background="@drawable/border"/>

                    <Button
                        android:id="@+id/btnUbahKota_Daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@color/button"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/ubah"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/detail_kota_daerah"
                    android:textColor="@color/textColor"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">

                            <TextView
                                android:id="@+id/txtDetailKota_Daerah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_kota_daerah"
                                android:textSize="15sp"
                                android:textAlignment="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <EditText
                                android:id="@+id/txtLongitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/longitude"
                                android:textSize="15sp"
                                android:textColor="@color/textColor"
                                android:enabled="false"
                                android:inputType="text"
                                android:textAlignment="textStart"
                                android:importantForAutofill="no"/>

                            <EditText
                                android:id="@+id/txtZona_Waktu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/zona_waktu"
                                android:textSize="15sp"
                                android:textColor="@color/textColor"
                                android:enabled="false"
                                android:inputType="text"
                                android:textAlignment="center"
                                android:importantForAutofill="no"/>


                            <EditText
                                android:id="@+id/txtLatitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/latitude"
                                android:textSize="15sp"
                                android:textColor="@color/textColor"
                                android:enabled="false"
                                android:inputType="text"
                                android:textAlignment="textEnd"
                                android:importantForAutofill="no"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnTambahKota_Daerah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/button"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="@string/tambah_kota_daerah"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CVTambahKota_Daerah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/tambah_kota_daerah"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtTambahNamaKota_Daerah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nama_kota_daerah"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColorHighlight="@color/colorPrimary"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    android:imeOptions="actionNext"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelTextColor="@color/colorPrimary"
                    app:met_floatingLabelTextSize="15sp"
                    app:met_floatingLabel="highlight"
                    app:met_underlineColor="@color/colorPrimary"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtTambahDetailKota_Daerah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/detail_kota_daerah"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColorHighlight="@color/colorPrimary"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions|textMultiLine"
                    android:imeOptions="actionNext"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelTextColor="@color/colorPrimary"
                    app:met_floatingLabelTextSize="15sp"
                    app:met_floatingLabel="highlight"
                    app:met_underlineColor="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/txtTambahLongitudeKota_Daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/longitude"
                        android:textSize="15sp"
                        android:textColor="@color/textColor"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHighlight="@color/colorPrimary"
                        android:singleLine="true"
                        android:digits="1234567890.-"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionNext"
                        android:textAlignment="textStart"
                        android:gravity="start"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelTextColor="@color/colorPrimary"
                        app:met_floatingLabelTextSize="15sp"
                        app:met_floatingLabel="highlight"
                        app:met_underlineColor="@color/colorPrimary"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/txtTambahZonaWaktuKota_Daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/zona_waktu"
                        android:textSize="15sp"
                        android:textColor="@color/textColor"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHighlight="@color/colorPrimary"
                        android:singleLine="true"
                        android:digits="1234567890+-"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionNext"
                        android:textAlignment="center"
                        android:gravity="center"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelTextColor="@color/colorPrimary"
                        app:met_floatingLabelTextSize="15sp"
                        app:met_floatingLabel="highlight"
                        app:met_underlineColor="@color/colorPrimary"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/txtTambahLatitudeKota_Daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/latitude"
                        android:textSize="15sp"
                        android:textColor="@color/textColor"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHighlight="@color/colorPrimary"
                        android:singleLine="true"
                        android:digits="1234567890.-"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionDone"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelTextColor="@color/colorPrimary"
                        app:met_floatingLabelTextSize="15sp"
                        app:met_floatingLabel="highlight"
                        app:met_underlineColor="@color/colorPrimary"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <Button
                        android:id="@+id/btnBatalTambahKota_Daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="@color/button"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/batal"/>

                    <Button
                        android:id="@+id/btnLokasiTambahKota_Daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/button"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/lokasi"/>

                    <Button
                        android:id="@+id/btnSimpanTambahKota_Daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@color/button"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/SIMPAN"
                        tools:ignore="RelativeOverlap"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>