<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dialog"
        app:cardCornerRadius="17dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PENGATURAN_PRIVASI"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:textColor="@color/background"
                android:background="@color/colorPrimary"
                android:padding="7dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtNamaPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nama_pengguna"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColorHighlight="@color/colorPrimary"
                    android:maxLength="20"
                    android:singleLine="true"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelTextColor="@color/colorPrimary"
                    app:met_floatingLabelTextSize="15sp"
                    app:met_floatingLabel="highlight"
                    app:met_underlineColor="@color/colorPrimary"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CVShowGantiPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/dialog">

                    <TextView
                        android:id="@+id/btnShowGantiPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:text="@string/klik_untuk_mengubah_password"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:outlineSpotShadowColor="@color/colorPrimaryDark"/>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILPasswordLama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    app:passwordToggleTint="@color/colorPrimary">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/txtPasswordLama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/input_password_lama_dahulu"
                        android:textSize="15sp"
                        android:textColor="@color/textColor"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHighlight="@color/colorPrimary"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:inputType="numberPassword"
                        android:imeOptions="actionDone"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelTextColor="@color/colorPrimary"
                        app:met_floatingLabelTextSize="15sp"
                        app:met_floatingLabel="highlight"
                        app:met_underlineColor="@color/colorPrimary"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILPasswordBaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    app:passwordToggleTint="@color/colorPrimary">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/txtPasswordBaru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_baru"
                        android:textSize="15sp"
                        android:textColor="@color/textColor"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHighlight="@color/colorPrimary"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:inputType="numberPassword"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelTextColor="@color/colorPrimary"
                        app:met_floatingLabelTextSize="15sp"
                        app:met_floatingLabel="highlight"
                        app:met_underlineColor="@color/colorPrimary"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILPasswordBaruUlangi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    app:passwordToggleTint="@color/colorPrimary">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/txtPassworBaruUlangi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_baru_ulangi"
                        android:textSize="15sp"
                        android:textColor="@color/textColor"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textColorHighlight="@color/colorPrimary"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:inputType="numberPassword"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelTextColor="@color/colorPrimary"
                        app:met_floatingLabelTextSize="15sp"
                        app:met_floatingLabel="highlight"
                        app:met_underlineColor="@color/colorPrimary"/>

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:padding="10dp"
                    app:cardBackgroundColor="@color/hint"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/perubahan_tanpa_perlu_disegarkan_atau_refresh_ingat_baik_baik_password_yang_telah_diubah"
                        android:textColor="@color/textColor"
                        android:gravity="center_horizontal"
                        android:layout_margin="5dp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/LLSimpanPengaturanPrivasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/LLBatalPengaturanPrivasi"
                        android:gravity="end">

                        <com.andexert.library.RippleView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btnSimpanPengaturanPrivasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/simpan"
                                android:textSize="15sp"
                                android:textColor="@color/background"
                                android:textStyle="bold"
                                android:drawableStart="@android:drawable/ic_menu_save"
                                android:background="@drawable/rounded_button"
                                android:padding="10dp"
                                android:drawableTint="@color/background"/>

                        </com.andexert.library.RippleView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LLBatalPengaturanPrivasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true">

                        <com.andexert.library.RippleView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btnBatalPengaturanPrivasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/batal"
                                android:textSize="15sp"
                                android:textColor="@color/background"
                                android:textStyle="bold"
                                android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                                android:background="@drawable/rounded_button"
                                android:padding="10dp"
                                android:drawableTint="@color/background"/>

                        </com.andexert.library.RippleView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>